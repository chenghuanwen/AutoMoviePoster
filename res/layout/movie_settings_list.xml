<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/movie_settings_layout_width"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- 字幕设置 -->

    <LinearLayout
        android:id="@+id/setting_menu_item_language"
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_settings_item_height"
        android:background="@drawable/foder_list_item_selector"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/movie_settings_ic_image_width"
            android:layout_height="@dimen/movie_settings_ic_image_height"
            android:src="@drawable/ic_settings_languange" />

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:paddingLeft="3px"
            android:paddingRight="5px"
            android:singleLine="true"
            android:text="@string/settings_text_language"
            android:textColor="@color/white_100"
            android:textSize="25px" />
        
        <com.hisilicon.videocenter.view.SwitchTextView
            android:id="@+id/language_siwtch_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
    </LinearLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/ic_settings_divider"/>

    <!-- 本地浏览 -->

    <LinearLayout
        android:id="@+id/setting_menu_item_local_browser"
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_settings_item_height"
        android:background="@drawable/foder_list_item_selector"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/movie_settings_ic_image_width"
            android:layout_height="@dimen/movie_settings_ic_image_height"
            android:src="@drawable/ic_settings_local_browser" />

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:paddingLeft="3px"
            android:singleLine="true"
            android:text="@string/settings_support_local_browser"
            android:textColor="@color/white_100"
            android:textSize="25px" />
        
        <com.hisilicon.videocenter.view.SwitchTextView
            android:id="@+id/local_browser_siwtch_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
    </LinearLayout>

    <View 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/ic_settings_divider"/>
    
    <!-- 密碼設置 -->

    <LinearLayout
        android:id="@+id/setting_menu_item_secret"
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_settings_item_height"
        android:background="@drawable/foder_list_item_selector"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:layout_width="@dimen/movie_settings_ic_image_width"
            android:layout_height="@dimen/movie_settings_ic_image_height"
            android:src="@drawable/ic_settings_secret" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:paddingLeft="3px"
            android:singleLine="true"
            android:text="@string/settings_secret_manage"
            android:textColor="@color/white_100"
            android:textSize="25px" />
    </LinearLayout>

    <!-- 影库管理 -->

    <LinearLayout
        android:id="@+id/setting_menu_item_folder_manage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_settings_item_height"
        android:background="@drawable/foder_list_item_selector"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/movie_settings_ic_image_width"
            android:layout_height="@dimen/movie_settings_ic_image_height"
            android:src="@drawable/ic_settings_movie_manage" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:paddingLeft="3px"
            android:singleLine="true"
            android:text="@string/settings_movie_foler_manage"
            android:textColor="@color/white_100"
            android:textSize="25px" />
    </LinearLayout>

    <View 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/ic_settings_divider"/>
    
    <!-- 影库目錄添加 -->

    <LinearLayout
        android:id="@+id/setting_menu_item_add_folder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_settings_item_height"
        android:background="@drawable/foder_list_item_selector"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/movie_settings_ic_image_width"
            android:layout_height="@dimen/movie_settings_ic_image_height"
            android:src="@drawable/ic_settings_add_folder" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:paddingLeft="3px"
            android:singleLine="true"
            android:text="@string/settings_movie_foler_add"
            android:textColor="@color/white_100"
            android:textSize="25px" />
    </LinearLayout>

    <!-- 影库製作 -->

    <LinearLayout
        android:id="@+id/setting_menu_item_folder_create"
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_settings_item_height"
        android:background="@drawable/foder_list_item_selector"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:layout_width="@dimen/movie_settings_ic_image_width"
            android:layout_height="@dimen/movie_settings_ic_image_height"
            android:src="@drawable/ic_settings_create" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:paddingLeft="3px"
            android:singleLine="true"
            android:text="@string/settings_movie_foler_create"
            android:textColor="@color/white_100"
            android:textSize="25px" />
    </LinearLayout>

    <!-- 影库下載和共享 -->

    <LinearLayout
        android:id="@+id/setting_menu_item_download_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_settings_item_height"
        android:background="@drawable/foder_list_item_selector"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:layout_width="@dimen/movie_settings_ic_image_width"
            android:layout_height="@dimen/movie_settings_ic_image_height"
            android:src="@drawable/ic_settings_download_share" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:paddingLeft="3px"
            android:singleLine="true"
            android:text="@string/settings_movie_download_share"
            android:textColor="@color/white_100"
            android:textSize="25px" />
    </LinearLayout>

</LinearLayout>
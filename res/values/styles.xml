<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="textStyle0">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/movie_title_blue</item>
    </style>

    <style name="textStyle1">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/movie_text_blue</item>
    </style>

    <style name="textStyle2">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextOnMainLayout_new">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/all_detail_page_unfocused</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="textStyle">
		<item name="android:textSize">30sp</item>
		<item name="android:textColor">@color/white</item>
	</style>
	
    <style name="MenuDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/settings_dialog_blue</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    
    <style name="DarkDialog" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
	<item name="android:background">@android:color/transparent</item>
	<item name="android:windowBackground">@drawable/drawable_bg</item>
    </style>
    
     <style name="phone_theme_dialog" parent="@android:style/Theme">
         <item name="android:windowIsFloating">true</item>
    </style>
    
     <style name="MyDialog">  
        <item name="android:windowFrame">@null</item>  
        <item name="android:windowBackground">@android:color/transparent</item>  
        <item name="android:windowNoTitle">true</item>  
        <item name="android:windowIsFloating">true</item>  
        <item name="android:windowContentOverlay">@null</item>  
</style> 
     
</resources>